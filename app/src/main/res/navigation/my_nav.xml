<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/fragmentA">


    <fragment
        android:id="@+id/fragmentA"
        android:name="com.example.quizapp.FragmentA"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_a">
        <action
            android:id="@+id/action_fragmentA_to_fragmentB"
            app:destination="@id/fragmentB"
             />

    </fragment>
    <fragment
        android:id="@+id/fragmentB"
        android:name="com.example.quizapp.FragmentB"
        android:label="Pregunta"
        tools:layout="@layout/fragment_b" >
        <action
            android:id="@+id/action_fragmentB_to_fragmentC"
            app:destination="@id/fragmentC"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/fragmentC"
        android:name="com.example.quizapp.FragmentC"
        android:label="Ups casi ..."
        tools:layout="@layout/fragment_c" >
        <action
            android:id="@+id/action_fragmentC_to_fragmentA"
            app:destination="@id/fragmentA"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/fragmentA"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_fragmentC_to_fragmentB"
            app:destination="@id/fragmentB"
            app:enterAnim="@android:anim/accelerate_interpolator"
            app:exitAnim="@android:anim/accelerate_decelerate_interpolator"
            app:popEnterAnim="@android:anim/linear_interpolator"
            app:popExitAnim="@android:anim/linear_interpolator" />
        <argument
            android:name="puntaje"
            app:argType="integer"
            android:defaultValue="0"/>
    </fragment>
    <fragment
        android:id="@+id/AyudaFragment"
        android:name="com.example.quizapp.AyudaFragment"
        android:label="AYUDA"
        tools:layout="@layout/fragment_ayuda" />
</navigation>